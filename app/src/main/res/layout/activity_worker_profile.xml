<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#07000000"
    android:scrollbarSize="0dp"
    tools:context=".Worker_profile">

    <ScrollView
        android:layout_width="match_parent"
android:layout_marginTop="55dp"
        android:scrollbarSize="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        app:cardCornerRadius="5dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:id="@+id/profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_view_background"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:orientation="vertical">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/worker_profile_pic"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"

                                    android:src="@drawable/ic_launcher_background" />
</LinearLayout>
                                <TextView
                                    android:id="@+id/worker_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="4dp"
                                    android:gravity="center"
                                    android:text="Saleem Javed"
                                    android:textColor="#D0000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/worker_prof"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Plumber" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
android:id="@+id/worker_details_star_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:src="@drawable/baseline_star_24" />

                                        <ImageView
                                            android:id="@+id/worker_details_star_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:src="@drawable/baseline_star_24" />

                                        <ImageView
                                            android:id="@+id/worker_details_star_3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:src="@drawable/baseline_star_24" />

                                        <ImageView
                                            android:id="@+id/worker_details_star_4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:src="@drawable/baseline_star_24" />

                                        <ImageView
                                            android:id="@+id/worker_details_star_5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:src="@drawable/baseline_star_24" />
                                    </LinearLayout>

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="8 reviews"
                                        android:textColor="#FFC107"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="4"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/worker_task_completd"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="12"
                                        android:textColor="#C6000000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Task completed"
                                        android:textColor="#52000000"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/worker_details_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="PKR 12,00"
                                        android:textColor="#C6000000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="February 2023"
                                        android:textColor="#52000000"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/worker_details_completition_rate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="93%"
                                        android:textColor="#C6000000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Completion rate"
                                        android:textColor="#52000000"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"

                        >

                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="-23dp"
                            android:background="@drawable/purple_circular_background"
                            android:backgroundTint="@color/purple"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="-23dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/purple_circular_background"
                            android:orientation="vertical">

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp">


                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="-20dp"
                            android:alpha="0.35"
                            android:background="@drawable/purple_circular_background"
                            android:backgroundTint="@color/purple"
                            android:orientation="vertical">

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="150dp">

                        <LinearLayout
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"

                            android:background="@drawable/purple_circular_background"
                            android:backgroundTint="@color/purple"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="30dp"

                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/purple_circular_background"
                            android:orientation="vertical">

                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"
                        android:layout_marginTop="150dp"
                        android:layout_marginRight="80dp">

                        <LinearLayout
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="17dp"
                            android:alpha="0.4"
                            android:background="@drawable/purple_circular_background"
                            android:backgroundTint="@color/purple"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="8dp"

                            android:alpha="0.4"
                            android:background="@drawable/purple_circular_background"
                            android:backgroundTint="@color/purple"
                            android:orientation="vertical">

                        </LinearLayout>
                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="About"
                android:layout_marginTop="20dp"

                android:textColor="#D3000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"

                android:background="@drawable/card_view_background"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/purple_marker"
                            app:tint="@color/purple" />

                        <TextView
                            android:id="@+id/worker_details_adress"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:text="Sargodha,Punjab,Pakistan"

                            android:textColor="#52000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/das"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_dashboard_black_24dp"
                            app:tint="@color/purple" />

                        <TextView
                            android:id="@+id/worker_details_prof"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:text="Plumber"

                            android:textColor="#52000000" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="22dp"
                    android:background="#52000000"
                    android:orientation="vertical"></LinearLayout>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Discription"
                    android:textColor="#52000000" />
                <TextView
                    android:id="@+id/worker_deatails_disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Discription"
                    android:textColor="#A1000000" />

            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Portfolio"
                android:textColor="#D3000000"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="100dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/card_view_background"
                android:orientation="vertical">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                     >

                    <ImageView
android:id="@+id/portfolio_image_1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"

android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/portfolio_image_2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/portfolio_image_3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/portfolio_image_4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/portfolio_image_5"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/portfolio_image_6"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/portfolio_image_7"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/portfolio_image_8"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_background" />
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/card_view_background"

        android:orientation="vertical">

        <Button
            android:id="@+id/worker_profile_send_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/purple"
            android:text="Send message"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:cornerRadius="6dp" />

    </LinearLayout>
    <include layout="@layout/toolbar"></include>
</RelativeLayout>