<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical"
    tools:context=".Settings">
    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" ></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:background="@drawable/card_view_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/language_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_language_24"
                android:drawablePadding="15dp"
                android:drawableTint="#8D000000"
                android:padding="15dp"
                android:text="Language"
                android:textColor="#C1000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#460C0C0C"
                android:orientation="vertical"></LinearLayout>


            <TextView
                android:id="@+id/contact_us_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_headset_mic_24"
                android:drawablePadding="15dp"
                android:drawableTint="#8D000000"
                android:padding="15dp"
                android:text="Contact us"
                android:textColor="#C1000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#460C0C0C"
                android:orientation="vertical"></LinearLayout>


            <TextView
                android:id="@+id/about_us_option"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_info_24"
                android:drawablePadding="15dp"
                android:drawableTint="#8D000000"
                android:padding="15dp"
                android:text="About us"
                android:textColor="#C1000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#460C0C0C"
                android:orientation="vertical"></LinearLayout>


            <TextView
                android:id="@+id/notification_option"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_notifications_black_24dp"
                android:drawablePadding="15dp"
                android:drawableTint="#8D000000"
                android:padding="15dp"
                android:text="Notifications"
                android:textColor="#C1000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#460C0C0C"
                android:orientation="vertical"></LinearLayout>





        </LinearLayout>


</LinearLayout>
</LinearLayout>