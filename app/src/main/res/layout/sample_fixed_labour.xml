<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:background="@drawable/card_view_background"
        android:paddingBottom="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fixed_worker_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
        android:layout_gravity="start"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fixed_worker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="200dp"
                    android:text="TextView"
                    android:layout_marginTop="10dp"
                    android:textColor="#DD000000"
                    android:textSize="15sp"
                    />


                <TextView
android:id="@+id/fixed_worker_prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:text="Reviews"
                    android:paddingLeft="6dp"
                    android:textColor="@color/purple"
                    android:textSize="10sp"
                    />

            </LinearLayout>
            <TextView

                android:id="@+id/fixed_worker_disc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#8D000000"

                android:textSize="10sp"
                android:paddingLeft="2dp"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fixed_worker_star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_star_24" />

                <ImageView
                    android:id="@+id/fixed_worker_star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_star_24" />

                <ImageView
                    android:id="@+id/fixed_worker_star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_star_border_24"
                    tools:ignore="DuplicateIds" />

                <ImageView
                    android:id="@+id/fixed_worker_star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_star_border_24" />

                <ImageView
                    android:id="@+id/fixed_worker_star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_star_border_24"
                    tools:ignore="DuplicateIds" />


                <TextView
                 android:id="@+id/fixed_worker_reviews_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="Reviews"
                    android:paddingLeft="6dp"
                    android:textColor="#DD000000"
                    android:textSize="10sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fixed_worker_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="View profile"
                android:textSize="12sp"
                android:gravity="center"
android:drawablePadding="2dp"
        android:drawableRight="@drawable/small_arrow"
                android:textColor="#888888" />



        </LinearLayout>






    </LinearLayout>

</LinearLayout>