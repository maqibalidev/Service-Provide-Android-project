<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Varification">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_marginTop="-30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="4dp"
                android:text="Verification"
                android:textColor="@color/purple"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"

                android:gravity="center"
                android:text="We have sent OTP to your phone,"
                android:textColor="#7E000000"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:gravity="center"
                android:text="
plese type code here"
                android:textColor="#7E000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

android:gravity="center"

    >
<com.chaos.view.PinView
    android:id="@+id/otp_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:itemBackground="@drawable/edit_text"
    app:itemCount="6"
    android:cursorVisible="true"
    android:gravity="center"
android:inputType="number"
    android:text=""
android:padding="5dp"
    android:background="#fff"
    android:elevation="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:itemRadius="5dp"
    app:itemSpacing="5dp"
    app:lineWidth="1dp"
    app:viewType="rectangle"
    app:cursorColor="#A22AB6"


    app:itemHeight="48dp"
    app:itemWidth="48dp"
    app:lineColor="#fff"
    >

</com.chaos.view.PinView>
</LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="right"

                    android:text="Resend OTP in "

                    android:textColor="#C3000000" />
                <TextView
                    android:id="@+id/otp_resend_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="left"

                    android:text="40s"
                    android:paddingLeft="5dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="#CF0808" />

            </LinearLayout>
            <TextView
                android:id="@+id/otp_resend_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
android:visibility="gone"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="Resend"
                android:textColor="#4CAF50" />
            <Button
                android:id="@+id/otp_verify_btn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/purple"
                android:text="Verify"
                android:textColor="#fff"
                android:textAllCaps="false"
                app:cornerRadius="7dp" />



        </LinearLayout>

    </RelativeLayout>
</LinearLayout>