    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_prof_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_margin="10dp"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_prof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="M Aqib Ali"
                        android:textColor="#DD000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/user_prof_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="maqibali@gmail.com"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/baseline_check_circle_24"
                            android:text="Varified profile"
                            android:textColor="#4CAF50"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="0"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/chats_noti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        app:srcCompat="@drawable/baseline_edit_calendar_24" />

                    <TextView
                        android:id="@+id/edit_option"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="10dp"
                        android:text="Edit"

                        android:textColor="@color/purple" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
android:id="@+id/my_task_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_check_box_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="#8D000000"
                    android:padding="15dp"
                    android:text="My tasks"
                    android:textColor="#C1000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#460C0C0C"
                    android:orientation="vertical"></LinearLayout>


                <TextView
android:id="@+id/bank_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_paid_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="#8D000000"
                    android:padding="15dp"
                    android:text="Bank details"
                    android:textColor="#C1000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#460C0C0C"
                    android:orientation="vertical"></LinearLayout>


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/check2"
                    android:drawablePadding="15dp"
                    android:drawableTint="#8D000000"
                    android:padding="15dp"
                    android:text="Account verification"
                    android:textColor="#C1000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#460C0C0C"
                    android:orientation="vertical"></LinearLayout>


                <TextView
                    android:id="@+id/settings_opt"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_settings_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="#8D000000"
                    android:padding="15dp"
                    android:text="Settings"
                    android:textColor="#C1000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#460C0C0C"
                    android:orientation="vertical"></LinearLayout>


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_logout_24"
                    android:drawablePadding="15dp"
                    android:drawableTint="#8D000000"
                    android:padding="15dp"
                    android:text="Logout"
                    android:textColor="#C1000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#460C0C0C"
                    android:orientation="vertical"></LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
