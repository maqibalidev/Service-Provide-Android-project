<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
  android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="@drawable/card_view_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_tasks_work_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/purple"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_tasks_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            android:textColor="#72000000"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_tasks_accepted"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"

            android:text="TextView"
            android:textColor="#72000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_tasks_accepted_by_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:text="TextView"
            android:textColor="#DA000000"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_tasks_budget"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"

            android:text="TextView"
            android:textColor="#72000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_tasks_buudget_price"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:text="TextView"
            android:textColor="#DA000000"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_tasks_location_txt"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"

            android:text="TextView"
            android:textColor="#72000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_tasks_location"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:text="TextView"
            android:textColor="#DA000000"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>